{
  "name": "glare_desktop",
  "version": "1.0.0",
  "description": "Glare management system",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "electron-builder -l"
  },
  "author": "David Reeves",
  "build": {
    "appId": "glaredesktop",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "icons/icon.ico"
    }
  },
  "dependencies": {
    "@abandonware/bleno": "^0.5.1-4",
    "@abandonware/noble": "^1.9.2-14",
    "bleno": "^0.5.0",
    "bootstrap": "4.2.1",
    "docxtemplater": "^3.16.3",
    "ejs": "^3.0.1",
    "electron-packager": "^15.2.0",
    "express": "^4.17.1",
    "filesize": "^6.1.0",
    "howler": "^2.2.1",
    "http": "0.0.1-security",
    "jquery": "3.3.1",
    "leveldown": "^6.0.0",
    "lowdb": "^2.1.0",
    "memdown": "^6.0.0",
    "nedb": "^1.8.0",
    "noble": "^1.9.1",
    "node-id3": "^0.2.2",
    "node-machine-id": "^1.1.12",
    "nodemon": "^2.0.2",
    "onoff": "^6.0.3",
    "pizzip": "^3.0.6",
    "request": "^2.88.2",
    "rxdb": "^9.20.0",
    "rxjs": "^7.1.0",
    "socket.io": "^3.1.2",
    "socket.io-client": "^3.1.3",
    "sqlite3": "^5.0.2",
    "sudo-prompt": "^9.2.1",
    "websql": "^2.0.2",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "browser-sync": "2.26.3",
    "electron": "^4.2.12",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^2.3.5",
    "gulp": "4.0.0"
  }
}
